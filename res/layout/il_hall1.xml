<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- 活动列表入口（广告） -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/id_item_bg"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:src="@drawable/id_bell" />

        <TextView
            android:id="@+id/ii_purchase_activity_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="4dip"
            android:layout_marginTop="5dip"
            android:text="@string/is_ssq_default_notice"
            android:textColor="@android:color/black" />
    </LinearLayout>

      <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- 双色球 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/id_item_bg"
                android:orientation="horizontal" >

                <!-- 彩种logo -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/id_ssq" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:singleLine="true"
                        android:text="@string/is_hall_ssq_title"
                        android:textColor="@color/red_slight"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ii_hall_ssq_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dip"
                        android:layout_marginTop="2dip"
                        android:singleLine="true"
                        android:text="@string/is_hall_summary_default"
                        android:textColor="@color/black_slight"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/ii_hall_ssq_bet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dip"
                        android:src="@drawable/id_betting" />
                </LinearLayout>
            </LinearLayout>

            <!-- 福彩3D -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/id_item_bg"
                android:orientation="horizontal" >

                <!-- 彩种logo -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/id_3d" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:singleLine="true"
                        android:text="@string/is_hall_3d_title"
                        android:textColor="@color/red_slight"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ii_hall_3d_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dip"
                        android:layout_marginTop="2dip"
                        android:singleLine="true"
                        android:text="@string/is_hall_summary_default"
                        android:textColor="@color/black_slight"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/ii_hall_3d_bet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dip"
                        android:src="@drawable/id_betting" />
                </LinearLayout>
            </LinearLayout>

            <!-- 七乐彩 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/id_item_bg"
                android:orientation="horizontal" >

                <!-- 彩种logo -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/id_qlc" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:singleLine="true"
                        android:text="@string/is_hall_qlc_title"
                        android:textColor="@color/red_slight"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ii_hall_qlc_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dip"
                        android:layout_marginTop="2dip"
                        android:singleLine="true"
                        android:text="@string/is_hall_summary_default"
                        android:textColor="@color/black_slight"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/ii_hall_qlc_bet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dip"
                        android:src="@drawable/id_betting" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>